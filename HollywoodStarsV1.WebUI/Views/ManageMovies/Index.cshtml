@model IEnumerable<HollywoodStars.Models.Movie>

@{
    ViewBag.Title = "Manage Movies";
}

<p>
    @Html.ActionLink("Click here to Add", "AddOrUpdate", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MovieId
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.ReleaseYear
            </td>
            <td>
                @Html.ActionLink("Update", "AddOrUpdate", new { id = item.MovieId }, new { @class = "btn btn-outline-primary" })

                @using (Html.BeginForm("Remove", "ManageMovies", FormMethod.Post, new { @class = "d-inline" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("MovieId", item.MovieId)
                    <input type="submit" value="Remove" class="btn btn-danger" onclick="return removeConfirmation();" />
                }
            </td>
        </tr>
    }
</table>

